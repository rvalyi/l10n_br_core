    <record model="ir.ui.view" id="view_partner_bra_form_inherit11">
        <field name="name">res.partner.form</field>
        <field name="type">form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field colspan="4" mode="form,tree" name="address" nolabel="1" select="1" position="replace">
                <field name="address" mode="form,tree" colspan="4" nolabel="1" select="1">
                    <form string="Endereços">
                      <group colspan="4" col="6">
                        <field name="tipo_pessoa"/>
                        <field name="cpf_cnpj"/>
                        <field name="type" select="2" />
                        <newline/>
                        <field name="street" select="2" colspan="4" />
                        <field name="numero" />
                        <newline/>
                        <field name="street2" colspan="1"/>
                        <newline/>
                        <field name="country_id" select="2" completion="1"/>
                        <field name="state_id" select="2" completion="1" />
                        <newline/>
                        <field name="zip" select="2"/>
                        <field name="location" select="2"/>
                        <newline/>
                        <field name="phone"/>
                        <field name="mobile"/>
                        <field name="fax"/>
                        <newline/>
                        <field name="email" widget="email" colspan="4"/>
                        <newline/>
                      </group>
                      <notebook colspan="4">
                        <page string="Pessoa Jurídica" attrs="{'invisible':[('tipo_pessoa','!=','J')]}">
                            <field colspan="4" mode="form,tree" name="pessoa_juridica" nolabel="1" select="1">
                                <form string="Pessoa Jurídica">
                                    <field name="fantasia" select="1"/>
                                    <field name="inscr_estadual" select="2"/>
                                    <field name="inscr_municipal" select="2"/>
                                    <field name="suframa" select="2"/>
                                    <field name="tipo_empresa" select="1"/>
                                    <field name="data_fundacao"/>
                                </form>
                                <tree string="Pessoa Juridica">
                                    <field name="fantasia"/>
                                    <field name="tipo_empresa"/>
                                    <field name="location"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Pessoa Física" attrs="{'invisible':[('tipo_pessoa','!=','F')]}">
                            <field colspan="4" mode="form,tree" name="pessoa_fisica" nolabel="1" select="1">
                                <form string="Pessoa Física">
                                    <field name="apelido" select="1"/>
                                    <field name="identidade" select="2"/>
                                    <field name="data_emissao_identidade" select="2"/>
                                    <field name="orgao_emissor_identidade" select="2"/>
                                    <field name="data_nascimento" select="1"/>
                                    <field name="estado_civil"/>
                                    <field name="sexo"/>
                                </form>
                                <tree string="Pessoa Física">
                                    <field name="apelido"/>
                                    <field name="estado_civil"/>
                                    <field name="location"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                      </notebook>
                    </form>
                    <tree string="Addresses">
                        <field name="type"/>
                        <field name="zip"/>
                        <field name="location"/>
                        <field name="country_id"/>
                        <field name="phone"/>
                    </tree>
                </field>
            </field>
        </field>
   </record>

