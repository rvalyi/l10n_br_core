<?xml version="1.0" ?>
<openerp>
	<data>

		<record model="ir.ui.view" id="view_product_form_expiry">
			<field name="name">product.normal.form</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_normal_form_view" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<notebook position="inside">
					<page string="Informações Fiscais">
						<separator string="Informações Fiscais" colspan="4" />
						<field name="cst_id" select="1"/>
						<field name="clfiscal_id" select="1"/>
						
					</page>
				</notebook>
			</field>
		</record>
		
		<record model="ir.ui.view" id="view_product_cst_form">
			<field name="name">product.cst.form</field>
			<field name="model">product.cst</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Situação Tributária">
					<field name="name" select="1"/>
					<field name="description" select="1"/>
				</form>
			</field>
		</record>
		<record  model="ir.ui.view" id="view_product_cst_tree">
            <field name="name">product.cst.tree</field>
            <field name="model">product.cst</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Situação Tributária">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_product_cst_form">
            <field name="name">Situação Tributária</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.cst</field>
            <field name="view_type">form</field>
        </record>
		
		 <record model="ir.ui.view" id="view_product_clfiscal">
			<field name="name">product.clfiscal.form</field>
			<field name="model">product.clfiscal</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Classificação Fiscal">
					<field name="name" select="1"/>
					<field name="description" select="1"/>
				</form>
			</field>
		</record>
		 <record  model="ir.ui.view" id="view_product_clfiscal_tree">
            <field name="name">product.clfiscal.tree</field>
            <field name="model">product.clfiscal</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Classificação Fiscal">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_product_clfiscal_form">
            <field name="name">Classificação Fiscal</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.clfiscal</field>
            <field name="view_type">form</field>
        </record>

	</data>
</openerp>

